{
  "extends": "./tsconfig.base.json", 
  "compilerOptions": {
    "outDir": "./dist/esm",
    "jsx": "react-jsx",
    "target": "ESNext",
    "baseUrl": ".",
    "plugins": [
   
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true },
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["dist", "assets/test-project"],
  "references": []
}
