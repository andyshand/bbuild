{
  "include": ["src"],
  "compilerOptions": {
    "outDir": "dist",
    "preserveWatchOutput": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "ES6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
